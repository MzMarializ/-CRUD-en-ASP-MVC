@model List<Product>
@{
}
<h2 class="text-center nb-5"> Productos Disponibles </h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Agregar </a>
    </div>
    <div class="col">

    </div>

</div>



<table class="table">

    <thead>

        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Foto</th>
            <th>Agregado</th>
            <th>Accion</th>

        </tr>
    </thead>
    <tbody>
    @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Nombre</td>
                <td>@product.Marca</td>
                <td>@product.Categoria</td>
                <td>@(product.Precio)$</td>
                <td><img src=" /Products/@product.ImageFileName" width="100" /></td>
                <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Edit"
                    asp-route-id="@product.Id"> Editar</a>

                    <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete"
                       asp-route-id="@product.Id" onClick="return confirm('Seguro/a que deseas eliminar el dispositivo?')"> Eliminar</a>

                </td>

            </tr>
        }

    </tbody>








</table>